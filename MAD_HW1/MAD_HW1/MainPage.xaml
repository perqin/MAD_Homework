<Page
    x:Class="MAD_HW1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MAD_HW1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="confirmButton" Content="确定" VerticalAlignment="Bottom" Margin="10,0,10,10" HorizontalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition" Click="confirmButton_Click"/>
        <TextBox x:Name="speakerNameTextBox" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Margin="10,0,10,47" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <Button x:Name="speak_button" Content="发言" VerticalAlignment="Bottom" Margin="10,0,10,84" HorizontalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition" Click="SpeakButton_Click"/>
        <ScrollViewer Margin="10,10,10,121" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
            <TextBlock x:Name="speechTextBlock" TextWrapping="Wrap" Text="" Height="509" Width="340" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>

    </Grid>
</Page>
